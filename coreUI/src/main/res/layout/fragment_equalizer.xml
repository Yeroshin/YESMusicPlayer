<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/equalizers_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/display"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="10dp">

        <include
            android:id="@+id/seekBar60hz"
            layout="@layout/seekbar_vertical" />

        <include
            android:id="@+id/seekBar230hz"
            layout="@layout/seekbar_vertical" />

        <include
            android:id="@+id/seekBar910hz"
            layout="@layout/seekbar_vertical" />

        <include
            android:id="@+id/seekBar3khz"
            layout="@layout/seekbar_vertical" />

        <include
            android:id="@+id/seekBar14khz"
            layout="@layout/seekbar_vertical" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/panel_flat"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.ys.musicplayer.custom_views.RotaryKnob
                android:id="@+id/loudness_enhancer_knob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rotaryknob"
                android:rotation="45"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/presetsSpinner"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_space" />

            <Switch
                android:id="@+id/equalizerSwitch"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:includeFontPadding="false"
                android:padding="1dp"
                android:text="@string/equalizer"
                android:textAlignment="textStart"
                android:textColor="@color/text_gray"
                android:textSize="10sp"
                android:thumb="@drawable/thumb"
                android:track="@drawable/switch_selector"

                tools:checked="false" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:includeFontPadding="false"
                android:padding="1dp"
                android:text="@string/loudness_enhancer"
                android:textAlignment="textStart"
                android:textColor="@color/text_gray"
                android:textSize="10sp"
                android:thumb="@drawable/thumb"
                android:track="@drawable/switch_selector"
                tools:checked="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>