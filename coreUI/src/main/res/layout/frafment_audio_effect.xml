<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="2"
            android:padding="5dp"
            android:singleLine="false"
            android:text="@string/loudness_enhancer" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2">

            <com.ys.musicplayer.custom_views.SwitchCustom
                android:id="@+id/loudnesSwitch"
                app:splitTrack="false"
                app:track="@drawable/switch_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumb="@drawable/thumb" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <com.ys.musicplayer.custom_views.RotaryKnob
            android:id="@+id/loudness_enhancer_knob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rotaryknob"
            android:rotation="45"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loudness_enhancer"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>